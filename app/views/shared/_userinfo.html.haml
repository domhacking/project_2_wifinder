- if user_signed_in?
  %h1 
    My Profile
    %p
      .circular
        = link_to image_tag(current_user.profile_image.thumb.url), current_user.profile_image.detail.url
      %p
        %b User Name:
        = current_user.name

      %p
        %b Email:
        = current_user.email

    %input#searchbox.form-control{:placeholder => "Search", :type => "text"}
  
    .btn
      = link_to 'FIND ME A CAFE', cafes_path
    .btn  
      = link_to 'EDIT MY PROFILE', edit_user_registration_path
      / = link_to 'MY FAVOURITES', _path
         



