- if user_signed_in?
  %h1 
    User Info
    %p
      .circular
        -if current_user.profile_image.thumb.url.present?
          = image_tag(current_user.profile_image.thumb.url)
        -else 
          = image_tag("default.png")
          
      %p
        %b User Name:
        = current_user.name

      %p
        %b Email:
        = current_user.email
  
    .btn
      = link_to 'FIND ME A CAFE', cafes_path
    .btn  
      = link_to 'EDIT MY PROFILE', edit_user_registration_path
      / = link_to 'MY FAVOURITES', _path
         



