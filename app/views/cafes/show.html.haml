- content_for :center do
  %p#notice= notice


  #cafe_header
    %h1
      %b= @cafe.cafe_name
    %p
      %b= @cafe.building_number + ' ' + @cafe.street_name + ', ' + @cafe.postcode
    %p
      %b= @cafe.opening_hours
  %h3 
    -if @cafe.cafe_image.thumb.url.present?
      %b= image_tag @cafe.cafe_image.url
    -else 
      = image_tag.thumb.url("default_cafe.png")

  #cafe_blurb
    %p
      %b= @cafe.cafe_description

  #cafe_contact_details
    %p
      %b Email:
      = @cafe.contact_email
    %p
      %b Tel:
      = @cafe.contact_tel
    %p
      %b Website:
      = @cafe.website_link
  #wifi_details
    %p
      %b Wifi network name:
      = @cafe.wifi_network_name
    %p
      %b Wifi password:
      = @cafe.wifi_password

  / - binding.pry
  #favorite
    - if current_user
      = link_to "favorite",   favorite_cafe_path(@cafe, type: "favorite"), method: :put
      = link_to "unfavorite", favorite_cafe_path(@cafe, type: "unfavorite"), method: :put
  #links
    = link_to 'Edit', edit_cafe_path(@cafe)
    \|
    = link_to 'Back', cafes_path


- content_for :right do
  = render 'shared/map'


